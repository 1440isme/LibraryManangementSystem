<Window
    x:Class="ThuVienApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    >

    <Grid>
        <!-- NavigationView cho menu bên trái -->
        <winui:NavigationView x:Name="NavView" PaneDisplayMode="Left" IsBackButtonVisible="Collapsed" 
                              PaneTitle="Quản lý Thư viện" SelectionChanged="NavView_SelectionChanged">
            <winui:NavigationView.MenuItems>
                <winui:NavigationViewItem Content="Dashboard" Tag="DashboardPage">
                    <winui:NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE80F;" />
                        <!-- Glyph for Home -->
                    </winui:NavigationViewItem.Icon>
                </winui:NavigationViewItem>
                <winui:NavigationViewItem Content="Quản lý Sách" Tag="SachPage">
                    <winui:NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8D2;" />
                        <!-- Glyph for Library -->
                    </winui:NavigationViewItem.Icon>
                </winui:NavigationViewItem>
                <winui:NavigationViewItem Content="Quản lý Thành viên" Tag="ThanhVienPage">
                    <winui:NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE77B;" />
                        <!-- Glyph for People -->
                    </winui:NavigationViewItem.Icon>
                </winui:NavigationViewItem>
                <winui:NavigationViewItem Content="Mượn/Trả Sách" Tag="MuonTraSachPage">
                    <winui:NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8A5;" />
                        <!-- Glyph for Page -->
                    </winui:NavigationViewItem.Icon>
                </winui:NavigationViewItem>
                <winui:NavigationViewItem Content="Báo cáo" Tag="BaoCaoPage">
                    <winui:NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE999;" />
                        <!-- Glyph for Report -->
                    </winui:NavigationViewItem.Icon>
                </winui:NavigationViewItem>
            </winui:NavigationView.MenuItems>
            <Frame x:Name="ContentFrame" />
        </winui:NavigationView>
    </Grid>
</Window>