<Window
    x:Class="ThuVienApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    Title="Quản lý Thư viện">

    <Grid>
        <Grid.Resources>
            <Style TargetType="Button" x:Key="SidebarButtonStyle">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Margin" Value="12,5"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <!-- Thêm Margin cho ContentPresenter để tạo khoảng cách -->
                                <ContentPresenter VerticalAlignment="Center" 
                                                Margin="20,0,0,0"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="SidebarButtonSelectedStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                <Setter Property="Background" Value="#5C22FF"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Background="White" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Menu and Menu Buttons in one StackPanel -->
            <StackPanel Grid.Row="0" Margin="0,20,0,20">
                <TextBlock Text="ADMIN" FontWeight="Bold" FontSize="18" Margin="20,0"/>
                <!-- Bỏ Padding khỏi các button vì đã xử lý trong Template -->
                <Button x:Name="BtnDashboard" Content="Dashboard" Style="{StaticResource SidebarButtonStyle}" Click="BtnDashboard_Click"/>
                <Button x:Name="BtnSach" Content="Quản lý Sách" Style="{StaticResource SidebarButtonStyle}" Click="BtnSach_Click"/>
                <Button x:Name="BtnThanhVien" Content="Quản lý Thành viên" Style="{StaticResource SidebarButtonStyle}" Click="BtnThanhVien_Click"/>
                <Button x:Name="BtnMuonTra" Content="Mượn/Trả Sách" Style="{StaticResource SidebarButtonStyle}" Click="BtnMuonTra_Click"/>
                <Button x:Name="BtnBaoCao" Content="Báo cáo" Style="{StaticResource SidebarButtonStyle}" Click="BtnBaoCao_Click"/>
            </StackPanel>

            <!-- Bottom Profile -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Height="60" Margin="10">
                <Ellipse Width="40" Height="40" Fill="DarkGray" VerticalAlignment="Center"/>
                <StackPanel Margin="10,0" VerticalAlignment="Center">
                    <TextBlock Text="Evano" FontWeight="Bold"/>
                    <TextBlock Text="ADMIN" FontSize="10" Foreground="Gray"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Frame x:Name="ContentFrame" Grid.Column="1" />
    </Grid>
</Window>